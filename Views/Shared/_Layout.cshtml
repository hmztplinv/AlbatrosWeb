<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Siteniz</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/site.css" />
    <!-- Gerekli diğer stil dosyalarını ekleyin -->
</head>
<body>
<!-- Header Bölümü -->
<header>
    <nav>
        <!-- Menü ve logo buraya gelecek -->
        <ul>
            <li><a href="@Url.Action("Index", "Home")">Anasayfa</a></li>
            <li><a href="@Url.Action("About", "Home")">Hakkımızda</a></li>
            <li><a href="@Url.Action("Contact", "Home")">İletişim</a></li>
        </ul>
    </nav>
</header>

<!-- Slider Bölümü -->
<section id="slider">
    @RenderSection("Slider", required: false)
</section>

<!-- İçerik Bölümü -->
<main role="main" class="container">
    @RenderBody()
</main>

<!-- Footer Bölümü -->
<footer>
    <p>&copy; @DateTime.Now.Year - Siteniz. Tüm hakları saklıdır.</p>
</footer>

<!-- Gerekli script dosyalarını ekleyin -->
<script src="~/js/site.js"></script>
</body>
</html>
