<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Siteniz</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+Knujsl5/1hbF3rcb2Yz0Os5n25AO9lvb" crossorigin="anonymous">


</head>
<body>

<header>
    <nav>
        <ul>
            <li><a href="@Url.Action("Index", "Home")">Anasayfa</a></li>
            <li><a href="@Url.Action("About", "Home")">Hakkımızda</a></li>
            <li><a href="@Url.Action("Contact", "Home")">İletişim</a></li>
        </ul>
    </nav>
</header>

 @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                @TempData["ErrorMessage"]
            </div>
        }

<section id="slider">
    @RenderSection("Slider", required: false)
</section>

<main role="main" class="container">
    @RenderBody()
</main>

<footer>
    <p>&copy; @DateTime.Now.Year - Siteniz. Tüm hakları saklıdır.</p>
</footer>

<script src="~/js/site.js"></script>
</body>
</html>
