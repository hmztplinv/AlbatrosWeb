@model UpdatePageDto

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Sayfa Düzenle</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" name="Id" value="@Model.Id" />
    <div class="form-group">
        <label asp-for="Title">Başlık</label>
        <input name="Title" class="form-control" value="@Model.Title" />
    </div>
    <div class="form-group">
        <label asp-for="Content">İçerik</label>
        <textarea name="Content" class="form-control ckeditor">@Model.Content</textarea>

    </div>
    <div class="form-group">
        <label asp-for="ParentPageId">Üst Sayfa</label>
        <select name="ParentPageId" class="form-control">
            <option value="">Ana Sayfa</option>
            @foreach (var item in ViewBag.ParentPages)
            {
            <option value="@item.Id" @(item.Id == Model.ParentPageId ? "selected" : "")>@item.Title</option>
            }
        </select>

    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>


