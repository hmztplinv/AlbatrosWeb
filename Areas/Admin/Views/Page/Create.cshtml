@model CreatePageViewModel

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Yeni Sayfa Ekle</h2>

<form method="post">
    <div class="form-group">
        <label for="Title">Başlık</label>
        <input type="text" name="CreatePageDto.Title" class="form-control" value="@Model.CreatePageDto?.Title" />
    </div>
    
    <div class="form-group">
        <label for="Content">İçerik</label>
        <textarea name="CreatePageDto.Content" class="form-control ckeditor">@Model.CreatePageDto?.Content</textarea>
    </div>
    
    <div class="form-group">
        <label for="ParentPageId">Üst Sayfa</label>
        <select name="CreatePageDto.ParentPageId" class="form-control">
            <option value="">Ana Sayfa</option>
            @foreach (var item in Model.ParentPages)
            {
                <option value="@item.Id" @(item.Id == Model.CreatePageDto?.ParentPageId ? "selected" : "")>@item.Title</option>
            }
        </select>
    </div>
    
    <div class="form-group">
        <label for="MenuPosition">Menü Pozisyonu</label>
        <input type="number" name="CreatePageDto.MenuPosition" class="form-control" value="@Model.CreatePageDto?.MenuPosition" />
    </div>
    
    <div class="form-group">
        <label for="IsInMenu">Menüde Gösterilsin mi?</label>
        <input type="hidden" name="IsInMenu" value="false" /> <!-- checkbox işaretlenmezse false olur -->
        <input type="checkbox" name="CreatePageDto.IsInMenu" value="true" @(Model.CreatePageDto?.IsInMenu == true ? "checked" : "") />
    </div>
    
    <div class="form-group">
        <label for="IsVisible">Görünür Olsun mu?</label>
        <input type="hidden" name="IsVisible" value="false" /> <!-- checkbox işaretlenmezse false olur -->
        <input type="checkbox" name="CreatePageDto.IsVisible" value="true" @(Model.CreatePageDto?.IsVisible == true ? "checked" : "") />
    </div>
    
    <button type="submit" class="btn btn-primary">Ekle</button>
    <a href="@Url.Action("Index", "Page", new { area = "Admin" })" class="btn btn-secondary">İptal</a>
</form>




