@model CreatePageViewModel

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Yeni Sayfa Ekle</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="CreatePageDto.Title">Başlık</label>
        <input asp-for="CreatePageDto.Title" name="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="CreatePageDto.Content">İçerik</label>
        <textarea asp-for="CreatePageDto.Content" id="Content" name="Content" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="CreatePageDto.ParentPageId">Üst Sayfa</label>
        <select asp-for="CreatePageDto.ParentPageId" name="ParentPageId" class="form-control">
            <option value="">Ana Sayfa</option>
            @foreach (var item in Model.ParentPages)
            {
                <option value="@item.Id">@item.Title</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Ekle</button>
</form>

<script>
    CKEDITOR.replace('Content', {
        removePlugins: 'easyimage,cloudservices'  // Uyarıya sebep olan eklentileri devre dışı bırakır.
    });
</script>
