@model IEnumerable<JournalDto>
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<h2>Bültenler</h2>

<a href="/Admin/Journal/Create" class="btn btn-primary">Bülten Ekle</a>

<table class="table">
    <thead>
        <tr>
            <th>Başlık</th>
            <th>Açıklama</th>
            <th>Yayın Tarihi</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var journal in Model)
        {
            <tr>
                <td>@journal.Title</td>
                <td>@journal.Description</td>
                <td>@journal.PublishedDate.ToString("dd/MM/yyyy")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@journal.Id" class="btn btn-warning">Edit</a>
                    <form asp-action="Delete" asp-route-id="@journal.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
