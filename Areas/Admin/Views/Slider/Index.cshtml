@model IEnumerable<SliderDto>
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4">Slider Listesi</h2>

<a href="@Url.Action("Create", "Slider")" class="btn btn-sm btn-success mb-3">Yeni Slider Ekle</a>
<a href="@Url.Action("Index", "Home")" class="btn btn-sm btn-info mb-3">Liste'ye Dön</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Başlık</th>
            <th>Resim</th>
            <th>Açıklama</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var slider in Model)
        {
            <tr>
                <td>@slider.Title</td>
                <td><img src="@slider.ImageUrl" alt="Slider Image" width="100" height="70" /></td>
                <td>@slider.Description</td>
                <td>
                    <a href="@Url.Action("Edit", "Slider", new { id = slider.Id })" class="btn btn-warning btn-sm">Düzenle</a>
                    <a href="@Url.Action("Delete", "Slider", new { id = slider.Id })" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>


