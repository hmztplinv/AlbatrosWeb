@model CreateAnnouncementDto
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<h2>Duyuru Ekle</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Title">Başlık</label>
        <input name="CreateAnnouncementDto.Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Content">İçerik</label>
        <textarea name="CreateAnnouncementDto.Content" id="Content" class="form-control ckeditor"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="IsPublished">Yayınlansın mı?</label>
        <input type="hidden" name="IsPublished" value="false" />
        <input type="checkbox" name="CreateAnnouncementDto.IsPublished" value="true" @(Model.IsPublished ? "checked" : "") />
        
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a href="@Url.Action("Index", "Announcement", new { area = "Admin" })" class="btn btn-secondary">İptal</a>
</form>
