@model IEnumerable<AnnouncementDto>
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<h2>Duyurular</h2>
<a href="@Url.Action("Create", "Announcement")" class="btn btn-sm btn-success mb-3">Yeni Duyuru Ekle</a>
<a href="@Url.Action("Index", "Home")" class="btn btn-sm btn-info mb-3">Liste'ye Dön</a>
<table class="table">
    <thead>
        <tr>
            <th>Başlık</th>
            <th>İçerik</th>
            <th>Yayında</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Content</td>
                <td>@(item.IsPublished ? "Evet" : "Hayır")</td>

                <td>
                    <a href="@Url.Action("Edit", "Announcement", new { id = item.Id })" class="btn btn-sm btn-warning">Düzenle</a>
                    <a href="@Url.Action("Delete", "Announcement", new { id = item.Id })" class="btn btn-sm btn-danger">Sil</a>
                    

                </td>
            </tr>
        }
    </tbody>
</table>



