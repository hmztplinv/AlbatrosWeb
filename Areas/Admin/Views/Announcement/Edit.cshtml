@model UpdateAnnouncementDto
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<h2>Duyuru Güncelle</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Title"></label>
        <input name="Title" value="@Model.Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Content"></label>
        <textarea name="Content" class="form-control">@Model.Content</textarea>
    </div>
    <div class="form-group">
        <label asp-for="IsPublished">Yayınlansın mı</label>
        <input type="hidden" asp-for="IsPublished" value="false" />
        <input type="checkbox" name="IsPublished" value="true" @(Model.IsPublished ? "checked" : "") />
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a href="@Url.Action("Index", "Announcement", new { area = "Admin" })" class="btn btn-secondary">İptal</a>
</form>
